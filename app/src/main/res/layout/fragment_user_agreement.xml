<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginHorizontal="17dp"
    tools:context=".view.UserAgreementFragment">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입을 위해\n서비스 약관에 동의해 주세요"
        android:textSize="23dp"
        android:textColor="@color/text_color"
        android:layout_marginTop="24dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <CheckBox
            android:id="@+id/allAgreeCheckBox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/background_checkbox"
            android:button="@null"
            android:layout_weight="1"
            android:checked="false"
            android:enabled="true"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="모두 동의합니다."
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/text_color"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:text="전체 동의는 필수 및 선택 정보에 대한 동의도 포함되어 있습니다.\n선택 항목에 대한 동의를 거부하시는 경우에도 서비스는 이용이 가능합니다." />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray050"
        android:layout_marginTop="24dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <CheckBox
            android:id="@+id/userAgreementCheckBox1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/background_checkbox"
            android:button="@null"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:enabled="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/userAgreementCheckBox1"
            android:layout_marginStart="10dp"
            android:paddingTop="3dp"
            android:textColor="@color/text_color"
            android:text="[필수] 서비스 이용약관 동의" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:paddingTop="3dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:layout_marginEnd="0dp"
            app:tint="@color/gray600"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <CheckBox
            android:id="@+id/userAgreementCheckBox2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/background_checkbox"
            android:button="@null"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:enabled="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/userAgreementCheckBox2"
            android:paddingTop="3dp"
            android:textColor="@color/text_color"
            android:text="[필수] 개인정보 수집 및 이용 동의" />
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:paddingTop="3dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:layout_marginEnd="0dp"
            app:tint="@color/gray600"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <CheckBox
            android:id="@+id/userAgreementCheckBox3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/background_checkbox"
            android:button="@null"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:enabled="true"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/userAgreementCheckBox3"
            android:layout_marginStart="10dp"
            android:paddingTop="3dp"
            android:textColor="@color/text_color"
            android:text="[선택] 이벤트 및 혜택 정보 수신 동의" />
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:paddingTop="3dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:layout_marginEnd="0dp"
            app:tint="@color/gray600" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

   <LinearLayout
       android:id="@+id/allAgreeAlarm"
       android:layout_width="match_parent"
       android:layout_height="68dp"
       android:background="@drawable/alert_background"
       android:padding="12dp"
       android:visibility="gone">
       <ImageView
           android:layout_width="32dp"
           android:layout_height="32dp"
           android:layout_gravity="center"
           android:src="@drawable/icon_details_info"
           app:tint="@color/white" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_marginLeft="12dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:textSize="16dp"
               android:textStyle="bold"
               android:text="모든 필수 약관에 동의해 주세요"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/gray100"
               android:textSize="12dp"
               android:layout_marginTop="2dp"
               android:text="필수 약관 동의 후 서비스 이용이 가능합니다."/>
       </LinearLayout>

   </LinearLayout>

    <Button
        android:id="@+id/userAgreementNextBtn"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button"
        android:text="다음"
        android:textColor="@color/white"
        android:layout_marginBottom="5dp"/>
</LinearLayout>