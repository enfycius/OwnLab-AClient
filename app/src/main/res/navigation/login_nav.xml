<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ownlab.ownlab_client.view.LoginFragment"
        android:label="로그인"
        tools:layout="@layout/fragment_login" >

        <action
            android:id="@+id/login_2_main"
            app:destination="@id/main_nav"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/login_2_register"
            app:destination="@id/register_nav"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/login_2_register_chk"
            app:destination="@id/register_chk_nav"
            app:popUpToInclusive="true">

            <argument
                android:name="chkMessage"
                app:argType="string"
                android:defaultValue="" />

        </action>

    </fragment>

    <include app:graph="@navigation/main_nav" />
    <include app:graph="@navigation/register_nav" />
    <include app:graph="@navigation/register_chk_nav" />


    <action
        android:id="@+id/register_2_login"
        app:destination="@id/loginFragment"
        app:popUpToInclusive="true" />

</navigation>